<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
  <persistence-unit name="JPuppyPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>itla.jpuppy.datalayer.Patients</class>
    <class>itla.jpuppy.datalayer.Breeds</class>
    <class>itla.jpuppy.datalayer.Species</class>
    <class>itla.jpuppy.datalayer.Users</class>
    <class>itla.jpuppy.datalayer.Customers</class>
    <class>itla.jpuppy.datalayer.Persons</class>
    <class>itla.jpuppy.datalayer.Employees</class>
    <class>itla.jpuppy.datalayer.Doctor</class>
    <class>itla.jpuppy.datalayer.Clients</class>
    <class>itla.jpuppy.datalayer.Appointments</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/jpuppydb"/>
      <property name="javax.persistence.jdbc.password" value="jpuppy2011"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.user" value="jpuppyuser"/>
      <property name="eclipselink.ddl-generation" value="create-tables"/>
    </properties>
  </persistence-unit>
</persistence>
